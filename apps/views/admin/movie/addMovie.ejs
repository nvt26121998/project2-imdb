<!DOCTYPE html>
<html>

<head>
    <title>New Movie</title>
    <% include ../layout/head%>
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script>tinymce.init({ selector:'textarea' });</script>
</head>

<body>
    <div class="container">
        <% include ../layout/nav_post%>
        <div class="panel panel-default">
            <div class="panel-heading">
                Add new movie
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <%if(data&&data.error){%>
                        <div id="login-alert" class="alert alert-danger col-sm-12">
                            <%=data.error%>
                        </div>
                        <%}%>
                        <form role="form" method="POST" action="/admin/movie/addMovie">
                            <div class="form-group">
                                <label>MovieName</label>
                                <input class="form-control" name="movieName" placeholder="MovieName">
                            </div>
                            <div class="form-group">
                                <label >Trailer</label>
                                <input class="form-control" name="trailer">
                            </div>
                            <div class="form-group">
                                <label >Poster</label>
                                <input class="form-control" name="poster" type="url">
                            </div>
                            <div class="form-group">
                                <label>Content</label>
                                <textarea class="form-control" name="content" placeholder="content">
                                </textarea>
                            </div>
                            <div class="form-group">
                                <label>Genre</label>
                                <input class="form-control" name="genre" placeholder="genre">
                            </div>
                            <div class="form-group">
                                <label>ReleaseDate</label>
                                <input class="form-control" name="releaseDate" placeholder="realeaseDate">
                            </div>
                            <div class="form-group">
                                <label>productionCo</label>
                                <input class="form-control" name="productionCo" placeholder="productionCo">
                            </div>
                            <div class="form-group">
                                <label>Rate Average</label>
                                <input class="form-control" name="rate_average" placeholder="rate">
                            </div>
                            <div class="form-group">
                                <label>Total Review</label>
                                <input class="form-control" name="total_review" placeholder="review">
                            </div>
                            <input type="submit" name="" value="Add" class="btn btn-success" />
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</body>

</html>